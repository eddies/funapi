<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>Fedora unAPI HTTP Service</display-name>
	<servlet>
		<display-name>
			Fedora unAPI HTTP Service
		</display-name>
		<servlet-name>FedoraUnapiServlet</servlet-name>
		<servlet-class>org.fedoracommons.unapi.UnapiServlet</servlet-class>
		<init-param>
			<param-name>resolver</param-name>
			<param-value>org.fedoracommons.unapi.fedora.FedoraResolver</param-value>
		</init-param>
	</servlet>
	
	<servlet>
        <display-name>
            DSpacePmh unAPI HTTP Service
        </display-name>
        <servlet-name>DSpacePmhUnapiServlet</servlet-name>
        <servlet-class>org.fedoracommons.unapi.UnapiServlet</servlet-class>
        <init-param>
            <param-name>resolver</param-name>
            <param-value>org.fedoracommons.unapi.pmh.dspace.DSpacePmhResolver</param-value>
        </init-param>
    </servlet>
    
    <servlet>
        <display-name>
            FedoraPmh unAPI HTTP Service
        </display-name>
        <servlet-name>FedoraPmhUnapiServlet</servlet-name>
        <servlet-class>org.fedoracommons.unapi.UnapiServlet</servlet-class>
        <init-param>
            <param-name>resolver</param-name>
            <param-value>org.fedoracommons.unapi.pmh.fedora.FedoraPmhResolver</param-value>
        </init-param>
    </servlet>

	<servlet-mapping>
		<servlet-name>FedoraUnapiServlet</servlet-name>
		<url-pattern>/fedora</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
        <servlet-name>DSpacePmhUnapiServlet</servlet-name>
        <url-pattern>/dspace-pmh</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>FedoraPmhUnapiServlet</servlet-name>
        <url-pattern>/fedora-pmh</url-pattern>
    </servlet-mapping>
</web-app>
